{
  "name": "e-waste-traceability",
  "version": "0.1.0",
  "private": true,
  "description": "Hybrid digital e-waste collection and traceability backbone for India (MVP monorepo).",
  "scripts": {
    "dev:api": "npm --workspace backend run start:dev",
    "dev:web": "npm --workspace frontend run dev",
    "dev": "npm-run-all -p dev:api dev:web",
    "build": "npm-run-all build:api build:web",
    "build:api": "npm --workspace backend run build",
    "build:web": "npm --workspace frontend run build",
    "lint": "npm-run-all lint:api lint:web",
    "lint:api": "npm --workspace backend run lint",
    "lint:web": "npm --workspace frontend run lint",
    "test": "npm --workspace backend run test",
    "seed": "npm --workspace backend run seed",
    "typeorm:migrate": "npm --workspace backend run typeorm:migrate"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
