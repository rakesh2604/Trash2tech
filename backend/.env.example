# Production / Render: use DATABASE_URL. Local: use DB_*.
NODE_ENV=development
PORT=3001

# Database — use DATABASE_URL (e.g. Render Postgres) or individual vars
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
DB_HOST=localhost
DB_PORT=5432
DB_USER=ewaste
DB_PASSWORD=ewaste_password
DB_NAME=ewaste_mvp

# Redis (optional) — use REDIS_URL in production or REDIS_HOST/REDIS_PORT
# REDIS_URL=redis://default:pass@host:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT (required for auth; min 32 chars in production)
JWT_SECRET=change-me-in-production-min-32-chars
JWT_EXPIRES_IN=1d

# CORS — production: set to frontend origin(s), e.g. https://your-app.vercel.app
# Local: use http://localhost:3000,http://localhost:3002 (comma-separated). Leave empty for permissive.
CORS_ORIGIN=

# Run migrations on startup (set false if you run migrations separately)
RUN_MIGRATIONS=true

WEIGHT_VARIANCE_THRESHOLD_PCT=0.05

WHATSAPP_BSP_BASE_URL=https://graph.facebook.com
WHATSAPP_BSP_PHONE_NUMBER_ID=
WHATSAPP_BSP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=
DEFAULT_HUB_ID=

EXOTEL_API_BASE_URL=
EXOTEL_API_KEY=
EXOTEL_API_TOKEN=
EXOTEL_VIRTUAL_NUMBER=

