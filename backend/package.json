{
  "name": "ewaste-backend",
  "version": "0.1.0",
  "description": "NestJS API for e-waste traceability MVP.",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "dev": "nest start --watch",
    "dev:api": "npm run dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "typeorm": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register ../node_modules/typeorm/cli.js -d src/typeorm-datasource.ts",
    "typeorm:migrate": "npm run typeorm -- migration:run",
    "migration:run": "npm run typeorm:migrate",
    "typeorm:migrate:revert": "npm run typeorm -- migration:revert",
    "migration:revert": "npm run typeorm:migrate:revert",
    "db:reset": "npm run migration:revert && npm run migration:run",
    "seed": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register src/scripts/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "csv-stringify": "^6.5.1",
    "dotenv": "^16.4.5",
    "fast-json-stable-stringify": "^2.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
